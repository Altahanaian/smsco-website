{
  "version": 2,
  "rewrites": [
    { "source": "/",           "destination": "/index.html"        },
    { "source": "/ar",         "destination": "/ar/index.html"     },
    { "source": "/ar/:path*",  "destination": "/ar/:path*"         },
    { "source": "/en",         "destination": "/en/index.html"     },
    { "source": "/en/:path*",  "destination": "/en/:path*"         },
    { "source": "/platform",   "destination": "/platform/index.html" },
    { "source": "/platform/:path*", "destination": "/platform/:path*" }
  ]
}
